@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Our Instagram</title>
    
    <link rel="icon" href="~/Resources/insta_logo.png" type="image/icon type">
    
    <link rel="stylesheet" type="text/css"  href="~/css/Hieu_NavBar/color.css"/>
    <link rel="stylesheet" type="text/css"  href="~/css/Hieu_NavBar/styles.css"/>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/Hieu_NavBar/index.js" defer></script>
    @* <script src="~/js/Hieu_NavBar/openImage.js" defer></script> *@
    @* <script> *@
    @*      *@
    @* </script> *@
</head>
<body>
<div class="navbar">
    <div class="main_panel">
        <div class="section_logo">
            <img class="title" alt="Instagram Title" src="~/Resources/insta_title.png"/>
            <img class="logo" alt="Instagram Logo" src="~/Resources/insta_logo_frame.png"/>
        </div>

        <div class="section_function">
            @* Home *@
            <a class="no_underline function" asp-area="" asp-controller="NavBar" asp-action="ToHome">
                @if (ViewData["Title"] == "Home")
                {
                    <img alt="Home Icon" src="~/Resources/home_fill.png" class="function_img">
                    <p class="function_name current_function" id="Home">Home</p>
                }
                else
                {
                    <img alt="Home Icon" src="~/Resources/home_blank.png" class="function_img">
                    <p class="function_name" id="Home">Home</p>
                }
            </a>
            @* Search *@
            <div class="function search">
                <img alt="Search Icon" src="~/Resources/search_blank.png" class="function_img">
                <p class="function_name" id="Search">Search</p>
            </div>
            <div class="function create">
                <img alt="Create Icon" src="~/Resources/create_blank.png" class="function_img">
                <p class="function_name" id="Create">Create</p>
            </div>
            @* Profile *@
            <a class="no_underline function" asp-area="" asp-controller="NavBar" asp-action="ToProfile">
                @if (ViewData["Title"] == "Profile")
                {
                    <img alt="Profile Icon" src="~/Resources/profile_fill.png" class="function_img">
                    <p class="function_name current_function" id="Profile">Profile</p>
                }
                else
                {
                    <img alt="Profile Icon" src="~/Resources/profile_blank.png" class="function_img">
                    <p class="function_name" id="Profile">Profile</p>
                }
            </a>
        </div>
        
        @* Section 'More' *@
        <div class="function section_more">
            <img alt="More Icon" src="~/Resources/burger.png" class="function_img">
            <p class="function_name" id="More">More</p>
            <div class="more_menu hide">
                <div class="more_first_part">
                    <div class="sub_function">
                        <p class="sub_function_name">Settings</p>
                        <img alt="Settings Icon" src="~/Resources/setting_blank.png" class="sub_function_img"/>
                    </div>
                    <div class="sub_function">
                        <p class="sub_function_name">Saved</p>
                        <img alt="Settings Icon" src="~/Resources/bookmark.png" class="sub_function_img"/>
                    </div>
                    <div class="sub_function">
                        <p class="sub_function_name">Switch Appearance</p>
                        <img alt="Settings Icon" src="~/Resources/moon.png" class="sub_function_img"/>
                    </div>
                    <div class="sub_function">
                        <p class="sub_function_name">Your Activities</p>
                        <img alt="Settings Icon" src="~/Resources/time.png" class="sub_function_img"/>
                    </div>
                    <div class="sub_function">
                        <p class="sub_function_name">Report A Problem</p>
                        <img alt="Settings Icon" src="~/Resources/report.png" class="sub_function_img"/>
                    </div>
                </div>
                <div class="more_second_part">
                    <a class="no_underline sub_function" asp-area="" asp-controller="Login" asp-action="Index">
                        <p class="sub_function_name">Switch Account</p>
                    </a>
                    <a class="no_underline sub_function" asp-area="" asp-controller="Login" asp-action="Index">
                        <p class="sub_function_name">Log Out</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    @* SEARCH PANEL *@
    <div class="search_panel hide">
        <div class="sub_panel_header search_header">
            <p class="sub_panel_title">Search</p>
            <input type="text" placeholder="Search" class="search_input">
        </div>
        <div class="section_result">
            <div class="recent_search show" >
                <p class="sub_panel_title">Recent</p>
                <div class="recent_result"></div>
            </div>
            <div class="result_search hide"></div> 
        </div>
    </div>
</div>

@* CREATE POPUP *@
<div class="create_panel">
    <div class="create_popup">
        <div class="create_header">
            <p class="create_title">Upload new image</p>
            <img alt="Close" src="~/Resources/close.png" class="close_img"/>
        </div>
        <div class="create_content show_upload">
            <img alt="Create" src="~/Resources/image.png" class="upload_img"/>
            <p class="upload_text">Upload an image to create new post</p>
            <input type="file" id="file" accept="image/png, image/jpg, image/jpeg" class="input_img" required/>
            <label for="file" class="input_button">Choose an image</label>
        </div>
        <div class="display_section hide_upload">
            <div class="display_image"></div>
            <div class="action_section">
                <input type="button" id="upload" class="btn_upload" onclick="uploadImage()"/>
                <label for="upload" class="label_upload">Upload</label>
                <input type="button" id="cancel" class="btn_cancel"/>
                <label for="cancel" class="label_cancel">Cancel</label>
            </div>
        </div>
    </div>
</div>

<div class="image_details_panel">
    <div class="image_popup">
        <div class="display_section">
            @* <div class="display_image"></div> *@
            @* <div class="action_section"> *@
            @*     <input type="button" id="upload" class="btn_upload" onclick="uploadImage()"/> *@
            @*     <label for="upload" class="label_upload">Upload</label> *@
            @*     <input type="button" id="cancel" class="btn_cancel"/> *@
            @*     <label for="cancel" class="label_cancel">Cancel</label> *@
            @* </div> *@
        </div>
        <div class="function_section">
            <img alt="Close" src="~/Resources/close.png" class="close_img"/>
            
        </div>
    </div>
</div>

@RenderBody()

@await RenderSectionAsync("Stylesheets", required: false)
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>