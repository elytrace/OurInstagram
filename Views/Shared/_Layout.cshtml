<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Our Instagram</title>

    <link rel="stylesheet" type="text/css"  href="css/Home/instagram.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/color.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/navbar.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/loading.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/scrollbar.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/post_home.css">
    <link rel="stylesheet" type="text/css"  href="css/Home/createPost.css">
<link rel="icon" href="Resources/insta_logo.png" type="image/icon type">

</head>
<body>
    <div class="Dashboard">
        <div class="navbarDiv">
            <div class="Dashboard_navBar">
                <div class="Dashboard_navBar-Logo">
                    <img src="Resources/insta_title.png" class = "logo-primary" alt="">
                    <img src="Resources/insta_logo_frame.png" class="logo-secondary" alt="">
                </div>
                <div class="Dashboard_navBar-functions">
                    <a class="functionDiv" href="/home">
                        <div class="aFunction">
                            <div class="logo-function">
                                <img src="Resources/house-solid.svg" class="img_function" alt="">
                            </div>
                            <p class="aFunction_name pageLoading">Home</p>
                        </div>
                    </a>
                    <div class="aFunction search">
                        <div class="logo-function">
                            <img src="Resources/magnifying-glass-solid.svg" class="img_function" alt="">
                        </div>
                        <p class="aFunction_name">Search</p>
                    </div>
                    <a class="functionDiv" href="/commingSoon">
                        <div class="aFunction">
                            <div class="logo-function">
                                <img src="Resources/compass-regular.svg" class="img_function" alt="">
                            </div>
                            <p class="aFunction_name">Explore</p>
                        </div>
                    </a>
                    <a class="functionDiv" href="/commingSoon">
                        <div class="aFunction">
                            <div class="logo-function">
                                <img src="Resources/instagram-reels-icon.png" class="img_function" alt="">
                            </div>
                            <p class="aFunction_name">Reels</p>
                        </div>
                    </a>
                    <a class="functionDiv" href="/message">
                        <div class="aFunction">
                            <div class="logo-function">
                                <img src="Resources/messenger.png" class="img_function" alt="">
                            </div>
                            <p class="aFunction_name">Messages</p>
                        </div>
                    </a>
                    <div class="aFunction notification">
                        <div class="logo-function">
                            <img src="Resources/heart.png" class="img_function" alt="">
                        </div>
                        <p class="aFunction_name">Notifications</p>
                    </div>
                    <div class="aFunction">
                        <div class="logo-function">
                            <img src="Resources/more.png" class="img_function" alt="">
                        </div>
                        <p class="aFunction_name">Create</p>
                    </div>
                    <a class="functionDiv toProfile" href="/">
                        <div class="aFunction">
                            <div class="logo-function avatarDiv">
                                <img src="Resources/default_ava.png" class="img_function avatar" alt="">
                            </div>
                            <p class="aFunction_name">Profile</p>
                        </div>
                    </a>
                </div>
                <div class="Dashboard_navBar-more">
                    <div class="logo-function">
                        <img src="Resources/icon_burger.png" class="img_more" alt="">
                    </div>
                    <p class="more_text">More</p>
                    <div class="moreClicked hideMenu">
                        <div class="moreSide firstSide">
                            <a class="aFunctionsInSide" href="/edit">
                                <p class="functionName">Setting</p>
                                <img src="Resources/setting.png" class="iconFunction" alt="">
                            </a>
                            <div class="aFunctionsInSide">
                                <p class="functionName">Saved</p>
                                <img src="Resources/bookmark.png" class="iconFunction" alt="">
                            </div>
                            <div class="aFunctionsInSide">
                                <p class="functionName">Switch appearance</p>
                                <img src="Resources/moon.png" class="iconFunction" alt="">
                            </div>
                            <div class="aFunctionsInSide">
                                <p class="functionName">Your activities</p>
                                <img src="Resources/time.png" class="iconFunction" alt="">
                            </div>
                            <div class="aFunctionsInSide">
                                <p class="functionName">Report a problem</p>
                                <img src="Resources/report.png" class="iconFunction" alt="">
                            </div>

                        </div>
                        <div class="moreSide secondSide">
                            <a class="aFunctionsInSide" href="/login">
                                <p class="functionName">Switch Account</p>
                            </a>
                            <a class="aFunctionsInSide" href="/login">
                                <p class="functionName">Log out</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="searchPane hideSearch">
                <div class="searchDiv">
                    <p class="searchText">Search</p>
                    <input type="text" placeholder="Search" class="searchInput">
                </div>
                <div class="searchRecentAndResult">
                    <div class="recentSearch showMenu" >
                        <p class="recentText">Recent</p>
                        <div class="resultRecent">

                        </div>
                    </div>
                    <div class="resultSearch hideMenu">

                    </div>                    
                </div>

            </div>
            <div class="notificationPane hide">
                <div class="headerNotification">
                    <p class="headerTextNotification">Notifications</p>
                </div>
                <div class="listNotification">

                </div>
            </div>
        </div>
        
        <div class="Dashboard_mainBoard">
            <div class="DashboardPane">
                <div class="postList">
                    
                </div>
                <div class="profileAndSuggest">
                    <div class="profile">
                        <div class="profileAvatarDiv">
                            <img src="" class="avatarProfile">
                        </div>
                        <div class="nameAndID">
                            <p class="IdUserLogin"></p>
                            <p class="nameUserLogin"></p>
                        </div>
                        <a class="switchAccount" href="/login"> Switch </a>
                    </div>
                    <div class="suggest">
                        <p class="suggestComingSoon">Suggestions for you:</p>     
                        <div class="suggestListDisplay"></div>                   
                    </div>
                </div>
            </div>
        </div>
    </div>

<main>
    @RenderBody()
</main>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>